{% extends 'base.html.twig' %}

{% block title %}Personnes{% endblock %}

{% block monTitre %} Page listant les personnes{% endblock %}

{% block body %}
<div class='container'>
    {% for personne in personnes %}
        <h2 class="border border-bottom border-primary"><a href="{{ path("afficher_personne", {'id': personne.id}) }}"> {{ personne.nom }}</a></h2>
            <h3>Liste des animaux possed√©s : </h3>
            {% for dispose in personne.disposes %}
                <div class="row align-items-center">
                    
                    <div class="col-2">
                        <img src="{{asset('images/' ~ dispose.animal.image)}}">
                    </div>
                    
                    <div class="col">
                        <h3><a href="{{ path('afficher_animal', {'id': dispose.animal.id}) }}">{{ dispose.animal.nom }}</a></h3>
                    <div> Nombre : {{ dispose.nb }}</div>

                </div>        
            {% endfor %}
            <hr>
    {% endfor %}
</div>

{% endblock %}
                
